<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_autolote.MainPage"
             xmlns:local="clr-namespace:Proyecto_autolote.Viewmodel">
             

    <ContentPage.BindingContext>
        <local:VMMainPage></local:VMMainPage>
    </ContentPage.BindingContext>

    <StackLayout>
        <Label Text="Usuario" />
        <Entry Keyboard="Text" Text="{Binding Usuario}" ></Entry>

        <Label Text="Contraseña" ></Label>
        <Entry Keyboard="Text" IsPassword="True" Text="{Binding Pass}" ></Entry>

        <Button Text="Ingresar" Command="{Binding Ingresar}" ></Button>

        <Label Text="{Binding Resultado}" />
    </StackLayout>

</ContentPage>
